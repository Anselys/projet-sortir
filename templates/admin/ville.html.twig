{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} | Admin - Gérer les Villes{% endblock %}

{% block main %}

    <h2 class="mb-5">Administrer les villes</h2>

    <div class="row justify-content-center">
        <div class="card text-white bg-secondary mb-3" style="width: 30%;">

            <div class="card-body d-flex align-items-center">

                <div class="w-100">

                    {{ form_start(search_form) }}

                    <div class="input-group">
                        {{ form_widget(search_form.nom, {
                            attr: {
                                class: 'form-control',
                                placeholder: 'Recherche par nom...'
                            }
                        }) }}

                        <button class="btn btn-primary" type="submit">
                            Rechercher
                        </button>
                    </div>
                    {{ form_end(search_form) }}
                </div>

            </div>
        </div>
    </div>


    {# Tableau des villes #}
    <section class="mt-4">

        <div class="table-responsive w-50 mx-auto">
            <table class="table w-100">

                <thead>
                <tr>
                    <th scope="col">Ville</th>
                    <th scope="col">Code Postal</th>
                    <th scope="col" style="width: 180px;">Actions</th>
                </tr>
                </thead>

                <tbody>

                {% for ville in villes %}
                    <tr class="table-primary">
                        <td>{{ ville.nom|capitalize }}</td>
                        <td>{{ ville.cpo }}</td>

                        <td style="width: 50px;">
                            <a class="btn btn-sm btn-info"
                               href="{{ path('app_admin_ville_update', { id: ville.id, token: csrf_token('ville_update' ~ ville.id) }) }}">
                                Modifier
                            </a>

                            <a class="btn btn-sm btn-danger"
                               href="{{ path('app_admin_ville_delete', { id: ville.id, token: csrf_token('ville_delete' ~ ville.id) }) }}"
                               onclick="return confirm('Êtes-vous sûr·e de vouloir supprimer cette ville ?')">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}

                {{ form_start(villes_form) }}
                <tr class="table-primary">
                    <td>
                        {{ form_row(villes_form.nom) }}
                    </td>
                    <td>
                        {{ form_row(villes_form.cpo) }}
                    </td>
                    <td style="width: 50px;">
                        {{ form_widget(villes_form.submit, {
                            label: 'Ajouter',
                            attr: { class: 'btn btn-success' }
                        }) }}
                    </td>
                </tr>
                {{ form_end(villes_form) }}

                </tbody>

            </table>
        </div>

    </section>

{% endblock %}
